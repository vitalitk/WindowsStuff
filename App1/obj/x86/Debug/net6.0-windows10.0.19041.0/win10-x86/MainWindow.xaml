<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='2' x:Name="AppTitleBar"
              Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:ConnectionId='6' x:Name="LeftPaddingColumn" Width="1"/>
                <ColumnDefinition x:ConnectionId='7' x:Name="IconColumn" Width="Auto"/>
                <ColumnDefinition x:ConnectionId='8' x:Name="TitleColumn" Width="*"/>
            </Grid.ColumnDefinitions>
            <!--add icon-->
            <Image x:ConnectionId='9' x:Name="AppIcon"
                   Source="Assets/Square64x64.png"
                   Grid.Column="1"
                   VerticalAlignment="Center"/>
            <TextBlock x:ConnectionId='10' x:Name="TitleBarTextBlock"
                       Text="WinUI Experimentations" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Grid.Column="2"
                       VerticalAlignment="Center">
            </TextBlock>
        </Grid>
        <!--Create a stack panel to hold a button in the center of the window-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:ConnectionId='5' x:Name="myButton"                       >Click Me</Button>
        </StackPanel>

        <NavigationView x:ConnectionId='3' x:Name="NavView" IsSettingsVisible="False" IsBackButtonVisible="Collapsed" PaneDisplayMode="LeftMinimal" Grid.Row="1"                                            >
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Button" Icon="GlobalNavigationButton" Tag="MainPage"/>
                <NavigationViewItem Content="Calculator" Icon="Calculator" Tag="CalcPage"/>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='4' x:Name="ContentFrame"/>
        </NavigationView>
                        
        
    </Grid>

    
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>
    
</Window>

